            <%= link_to "Sign In", sign_in_path, class: "button button-large font-weight-semibold button-border button-rounded ls0 nott" %>
            <%= link_to root_path do %>
              "How It Works" <i class="icon-caret-right1 position-relative" style="top: 2px"></i>
            <% end %>
