<header id="header" class="transparent-header header-size-custom" data-sticky-shrink="false">
  <div id="header-wrap">
    <div class="container">
      <div class="header-row">
        <div id="logo">
          <%= link_to root_path do %>
            <%= image_tag('1t-logo.png') %>
          <% end %>
        </div>

        <div class="header-misc">
          <%= link_to "DONATE", donate_path, class: "button button-small font-weight-semibold button-border button-rounded ls0 font-weight-medium nott menu-link" %>
        </div>

        <div id="primary-menu-trigger">
          <svg class="svg-trigger" viewBox="0 0 100 100"><path d="m 30,33 h 40 c 3.722839,0 7.5,3.126468 7.5,8.578427 0,5.451959 -2.727029,8.421573 -7.5,8.421573 h -20"></path><path d="m 30,50 h 40"></path><path d="m 70,67 h -40 c 0,0 -7.5,-0.802118 -7.5,-8.365747 0,-7.563629 7.5,-8.634253 7.5,-8.634253 h 20"></path></svg>
        </div>

        <nav class="primary-menu">
          <ul class="menu-container">
            <% if signed_in? %>
              <li class="menu-item"><span class="menu-link">Signed in as: <%= current_user.email %></span></li>
              <li class="menu-item"><%= link_to 'Sign out', sign_out_path, method: :delete %></li>
            <% else %>
              <li class="current menu-item"><%= link_to "Join Us", sign_up_path, class: "menu-link" %></li>
              <li class="menu-item"><%= link_to "Login", sign_in_path, class: "menu-link" %></li>
            <% end %>
            <li class="menu-item"><%= link_to "About Us", root_path, class: "menu-link" %></li>
          </ul>
        </nav>
      </div>
    </div>
  </div>
  <div class="header-wrap-clone"></div>

  <div id="flash">
    <% flash.each do |key, value| %>
      <div class="flash <%= key %>"><%= value %></div>
    <% end %>
  </div>
</header>
